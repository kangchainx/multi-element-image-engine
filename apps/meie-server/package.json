{
  "name": "@meie/server",
  "version": "1.0.0",
  "type": "module",
  "description": "Multi-Element Image Engine - Backend server for ComfyUI API integration",
  "main": "dist/api/server.js",
  "scripts": {
    "start": "npm run build && node --env-file-if-exists=../../.env dist/api/server.js",
    "api": "npm run build && node --env-file-if-exists=../../.env dist/api/server.js",
    "worker": "npm run build && node --env-file-if-exists=../../.env dist/worker/index.js",
    "dual-track": "npm run build && node --env-file-if-exists=../../.env dist/bin/dual-track.js",
    "build": "tsc",
    "dev:build": "tsc --watch --preserveWatchOutput",
    "dev:api": "node --env-file-if-exists=../../.env dist/api/server.js",
    "dev:worker": "node --env-file-if-exists=../../.env dist/worker/index.js",
    "dev": "node scripts/dev-api.mjs",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bullmq": "^5.0.0",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "tsx": "^4.7.0"
  }
}
